# Enable the rewrite engine
RewriteEngine On

# Set the base directory for the rewrites
RewriteBase /

# If the request is for an actual file or directory, don't rewrite
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route API requests
RewriteRule ^api/posts$ server/api/api.php [L]
RewriteRule ^api/mark-complete$ server/api/api.php [L]

# If not found, serve the index.html
RewriteRule ^ index.html [L]
